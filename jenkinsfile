pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
        stage('Test') { 
            steps {
                echo 'python3 manage.py test'
            }
        }
        stage('Deploy') { 
            steps {
                sh 'ssh django@192.168.56.108" source venv/bin/activate; \
                project/polling; \
                git pull origin master; \ 
                pip install -r requirments.txt --no-warm-script-location; \
                python manage.py migrate; \
                deactivate; \
                sudo systemctl restart nginx; \ 
                sudo systemctl restart gunicorn; "'
            }
        }
    }
}
